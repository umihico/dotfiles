################################################################################
###                                   PATH                                   ###
################################################################################
# Force-reset PATH to stay clean
export PATH=/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin

################################################################################
###                                 Homebrew                                 ###
################################################################################
export PATH=$PATH:/opt/homebrew/bin # https://qiita.com/yasukom/items/3f9f7eb98dfdd20d9704

################################################################################
###                                  ALIAS                                   ###
################################################################################
source ~/.alias

################################################################################
###                                 DIRENV                                   ###
################################################################################
eval "$(direnv hook zsh)"

################################################################################
###                                FUNCTIONS                                 ###
################################################################################
source ~/.functions.sh
